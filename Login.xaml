<Window x:Class="MyCards.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCards"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"  Background="#1C2F3E">
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button x:Name="btn_login" Height="50" Background="Transparent" Margin="10,0" BorderBrush="Transparent" Click="btn_login_Click">Einloggen</Button>
            <Button x:Name="btn_missed_Passwort" Height="50" Margin="10,0" Background="Transparent" BorderBrush="Transparent" Click="btn_missed_Passwort_Click">Password vergessen</Button>
            <Button x:Name="btn_register" Height="50" Margin="10,0" Background="Transparent" BorderBrush="Transparent" Click="btn_register_Click">Registrieren</Button>
        </StackPanel>
    <!--Dynamic Content Start-->
    <Frame x:Name="LoginFrame" Grid.Column="1" Grid.Row="1" Margin="10, 20" NavigationUIVisibility="Hidden"/>
    <!--Dynamic Content End-->
    </DockPanel>
</Window>
