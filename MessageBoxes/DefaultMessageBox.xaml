<Window x:Class="MyCards.MessageBoxes.DefaultMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCards.MessageBoxes"
        mc:Ignorable="d"
         Title="MessageBox" ResizeMode="NoResize" Height="200" Width="600" Background="#1C2F3E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="txtBox_Message" HorizontalAlignment="Center" Margin="0,20" Foreground="White"/>
        <Button x:Name="btn_Yes" Grid.Row="1" Content="Schließen" Width="80" Margin="5" Click="btnYes_Click" HorizontalAlignment="Center" Background="Transparent"/>
    </Grid>
</Window>
